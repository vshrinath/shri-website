{
  "$ref": "#/definitions/library",
  "definitions": {
    "library": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "Article",
            "Press",
            "Talk",
            "Report",
            "Podcast"
          ]
        },
        "source": {
          "type": "string"
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "highlight": {
          "type": "boolean",
          "default": false
        },
        "excerpt": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "date",
        "type"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}